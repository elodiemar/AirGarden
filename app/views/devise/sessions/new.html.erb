<div class="d-flex">
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-2x mx-4 mt-4"></i>
  <% end %>


  <div class="form-container text-center mt-3">
    <h2>Connectez-vous</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: 'Mot de passe',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn-flat-connexion">
        <%= f.button :submit, "Connexion", class:"btn btn-flat w-100"%>
      </div>
    <% end %>
      <%= render "devise/shared/links" %>

  </div>
</div>
