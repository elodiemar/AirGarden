<div class="index-banner">
  <div>
      <h4 class="p-3">Trouve le jardin idéal pour ton évènement !</h4>
  </div>
  <div class="d-flex justify-content-center">
    <%= form_tag gardens_path, method: :get, class: "d-flex align-center w-50" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Recherche ton jardin idéal"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<div class="d-flex flex-wrap justify-content-between fullscreen_footer">
    <div class="gardens">
      <% @gardens.each do |garden| %>
        <div class="card-garden">
          <%= link_to garden_path(garden) do %>
          <% if garden.photos.empty? %>
            <%= image_tag "garden_one" %>
            <% else %>
            <%= cl_image_tag garden.photos.first.key, height: 200, width: 200, crop: :fill %>
            <% end %>
          <% end %>
          <div class="card-garden-infos">
            <div class="card-garden-left">
              <h2><%= garden.title %></h2>
              <p>Ville</p>
            </div>
            <div class="card-garden-right">
              <h6>Capacité : <%= garden.capacity %></h6>
              <h2 class="card-garden-pricing"><%= garden.price_per_hour %>€ /heure</h2>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div style="width: 100%; height: 600px"
      id="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
